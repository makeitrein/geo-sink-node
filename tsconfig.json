{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "index.ts",
    "src/**/*",
  ]
}